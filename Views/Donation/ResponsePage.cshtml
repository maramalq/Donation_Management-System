                <input asp-for="@Model.Patient.Hospital" class="form-control" />
                <span asp-validation-for="@Model.Patient.Hospital" style="color: red;"></span> <br />
            </div>  *@

            <div>
                <button type="submit" class="btn btn-outline-primary">Response</button>
            </div>

        </form>
    </div>
</body>
</html>