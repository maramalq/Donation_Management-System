<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    @model Admin
    <div>

        <h4> Register </h4>

        <form asp-action="Register" asp-controller="Home" method="POST">

            <div>
                @* <label asp-for="FirstName"></label> *@
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" style="color: red;"></span> <br />
            </div>

            <div>
                @* <label asp-for="LastName"></label> *@
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" style="color: red;"></span><br/>
            </div>

            <div>
                @* <label asp-for="Email"></label> *@
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" style="color: red;"></span><br/>
            </div>

            <div>
                @* <label asp-for="Password"></label> *@
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" style="color: red;"></span><br/>
            </div>

            <div>
                @* <label asp-for="Confirm"></label> *@
                <input asp-for="Confirm" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="Confirm" style="color: red;"></span><br/>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
        </form>
    </div>
</body>
</html>