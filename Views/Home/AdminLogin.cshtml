<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="text-center">
    @model LoginAdmin

        <div class="row">

            <div class="col-sm-3">
            </div>

            <div class="col-sm-6">
                <img src="~/img/admin.png" alt="admin" style="width: 300px;" />


                <h3>Admin Login</h3>
                <form asp-action="Login" asp-controller="Home" method="POST">
                        <div>
                            <input class="form-control" placeholder="Email" asp-for="LoginEmail" />
                            <span asp-validation-for="LoginEmail" style="color: red;"></span><br/>
                        </div> 

                        <div >
                            <input class="form-control" placeholder="Password" asp-for="LoginPassword" />
                            <span asp-validation-for="LoginPassword" style="color: red;"></span><br/>
                        </div>

                        <div>
                            <button class="btn btn-outline-info" type="submit">Submit</button>
                        </div>
                </form>
            </div>

            <div class="col-sm-3">
            </div>
            
        </div>

    </div>
</body>
</html>